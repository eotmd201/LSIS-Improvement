<Window x:Class="LSIS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        xmlns:local="clr-namespace:LSIS" 
        xmlns:viewmodel="clr-namespace:LSIS.ViewModel" d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        xmlns:Page="clr-namespace:LSIS.Page"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1920" ResizeMode="NoResize" WindowStartupLocation="Manual" WindowState="Maximized" Visibility="Visible" WindowStyle="None" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="9*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Menu>
                <MenuItem Header="File" FontSize="20"/>
                <MenuItem Header="System" FontSize="20">
                    <MenuItem x:Name="CameraCon" Header="Camera(not connected)"/>
                    <MenuItem x:Name="ServoCon" Header="Servo(not connected)"/>
                    <MenuItem x:Name="PCBCon" Header="PCB(not connected)"/>
                    <MenuItem Header="AlarmReset" Click="AlarmReset_Click"/>
                    <MenuItem Header="ErrCode" Click="ErrCheck"/>
                </MenuItem>
                <MenuItem Header="Help" FontSize="20">
                    <MenuItem Header="{Binding Version}" FontSize="20"/>
                </MenuItem>
                <MenuItem Header="About" FontSize="20">
                    <MenuItem Header="회사명: (주)에스원바이오" />
                    <MenuItem Header="주소: 49241 부산시 서구 구덕로 187(융합의학연구동), 1층 17호" />
                    <MenuItem Header="전화 : 051-254-1379 팩스 : 051-254-1378" />
                    <MenuItem Header="이메일 : medical@s-one.co.kr" />
                </MenuItem>
            </Menu>
            <Grid Grid.Column="1" Background="#FF333333">
                <TextBlock x:Name="WindowName" FontSize="20" Foreground="White" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Background="#FF333333" Grid.Column="1" Margin="0,0,20,0" />
            </Grid>
        </Grid>

        <TabControl x:Name="tabControl" Grid.Row="1"  SelectedIndex="{Binding TabControlViewModel.SelectedIndex, Mode=TwoWay}" SelectionChanged="tabControl_SelectionChanged">
            <TabItem Header="로그인" Height="0">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="3*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    
                    <Grid.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding LoginViewModel.LoginCommand}" />
                    </Grid.InputBindings>
                    
                    <Label Content="Login" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="80" Grid.Column="1" Grid.Row="0" Foreground="Black" FontWeight="Bold"/>
                    <Label Content="ID" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="40" Grid.Column="0" Grid.Row="1" Foreground="Black" FontWeight="Bold" Margin="0,0,0,0"/>
                    <Label Content="Password" HorizontalAlignment="Right" VerticalAlignment="Center" FontSize="40" Grid.Column="0" Grid.Row="2" Foreground="Black" FontWeight="Bold" Margin="0,0,0,0"/>
                    <TextBox x:Name="UsernameTextBox" Text="{Binding LoginViewModel.Username, UpdateSourceTrigger=PropertyChanged}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Grid.Column="1" Grid.Row="1" Width="600"/>
                    <PasswordBox x:Name="PasswordBox" Page:PasswordBoxHelper.BoundPassword ="{Binding LoginViewModel.Password, Mode=TwoWay}" Page:PasswordBoxHelper.BindPassword="True" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Grid.Column="1" Grid.Row="2" Width="600"/>
                    <Button Content="Login" FontSize="40"  Grid.Column="1" Grid.Row="3" Width="600" Height="100" Command="{Binding LoginViewModel.LoginCommand}"/>
                </Grid>
            </TabItem>
            <TabItem Header="계정 관리" Height="0">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <ToolBar>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Add" Click="Account_Add_Click"/>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Change" Click="Account_Change_Click"/>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Delete" Click="Account_Delete_Click"/>
                        <Button Height="80" Width="80" FontSize="18" FontWeight="Bold" Content="Manager" Click="Manager_Change"/>
                        <Button Height="80" Width="80" FontSize="18" FontWeight="Bold" Content="PACSSet" Click="PACSSet_Click"/>
                        <TextBox x:Name="Account_Search" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="300" Height="50" Margin="50,0,0,0" KeyDown="Account_Search_KeyDown"/>
                        <Button Content="Find" FontSize="20" Width="75" Height="50" Click="Account_Find_Click"/>
                        <Button Content="Reset" FontSize="20" Width="75" Height="50" Click="Account_Reset_Click"/>
                    </ToolBar>
                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="1*"/>
                        </Grid.ColumnDefinitions>
                        <ListView x:Name="List_Account" Grid.ColumnSpan="2" FontSize="30" Margin="0,0,0,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn x:Name="ID" Header="ID" DisplayMemberBinding="{Binding ID}" Width="200"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                        <!--<ListView ItemsSource="{Binding Accounts}" SelectedItem="{Binding SelectedAccount, Mode=TwoWay}" Grid.Column="1" FontSize="30" Margin="0,0,0,0">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding ID}" Width="200"/>
                                </GridView>
                            </ListView.View>
                        </ListView>-->
                    </Grid>

                </Grid>
            </TabItem>
            <TabItem Header="환자 관리" Height="0">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="1*"/>

                    </Grid.RowDefinitions>
                    <ToolBar>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Add" Click="Add_Click"/>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Change" Click="Change_Click"/>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Delete" Click="Delete_Click"/>
                        <TextBox x:Name="Patient_Search" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="300" Height="50" Margin="50,0,0,0" KeyDown="Search_KeyDown"/>
                        <Button Content="Find" FontSize="20" Width="75" Height="50"  Click="Find_Click"/>
                        <Button Content="Reset" FontSize="20" Width="75" Height="50" Click="Reset_Click"/>
                    </ToolBar>

                    <ListView x:Name="List_Patient"  Grid.Row="1" FontSize="20" Margin="0,0,0,0" SelectionChanged="List_Patient_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn x:Name="test" Header="Name" DisplayMemberBinding="{Binding Name}" Width="200"/>
                                <GridViewColumn Header="HID" DisplayMemberBinding="{Binding HID}" Width="300"/>
                                <GridViewColumn Header="Birthday" DisplayMemberBinding="{Binding Birthday}" Width="200"/>
                                <GridViewColumn Header="Sex" DisplayMemberBinding="{Binding Sex}" Width="100"/>
                                <GridViewColumn Header="Comment" DisplayMemberBinding="{Binding Comment}" Width="825"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
            </TabItem>
            <TabItem Header="촬영" Height="0">
                <Grid Background="#FFE5E5E5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <ToolBar>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Scan&#xA;Data" Background="#FF4E7DC2" Click="ScanData_Click"/>
                        <Button x:Name="Preview" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Preview" Background="#FF4E7DC2" IsEnabled="False" Click="Servo_Preview_Click"/>
                        <Button x:Name="Reset" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Reset" Background="#FF4E7DC2" IsEnabled="False" Click="Servo_Reset_Click"/>
                        <Button x:Name="Reverse" Height="80" Width="80" FontSize="40" FontWeight="Bold" Content="↶" Background="#FF4E7DC2" VerticalAlignment="Bottom" IsEnabled="False" Click="Servo_Reverse_Click"/>
                        <Button x:Name="Forward" Height="80" Width="80" FontSize="40" FontWeight="Bold" Content="↷" Background="#FF4E7DC2" IsEnabled="False" Click="Servo_Forward_Click"/>
                        <Button x:Name="Up" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="▲" Background="#FF4E7DC2" IsEnabled="False" PreviewMouseDown="Up_Actuator" PreviewMouseUp="Stop_Up_Actuator" TouchDown="Up_Actuator" TouchUp="Stop_Up_Actuator"/>
                        <Button x:Name="Down" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="▼" Background="#FF4E7DC2" IsEnabled="False" TouchDown="Down_Actuator" PreviewMouseDown="Down_Actuator" PreviewMouseUp="Stop_Up_Actuator" TouchUp="Stop_Up_Actuator"/>
                        <Button x:Name="AutoScan" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Auto&#xA;Scan" Background="#FFED9140" IsEnabled="False" VerticalAlignment="Bottom" Click="AutoScan_Click"/>
                        <Button x:Name="ManualScan" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Scan" Background="#FFED9140" IsEnabled="False" Click="Screenshot_Click"/>
                        <Button x:Name="Button_Video"  Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Video" Background="#FFED9140" Click="Video_Click"/>
                        <Button x:Name="Dicom_Video"  Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Dicom" Background="#FFED9140" Click="Dicom_Click"/>
                        <!--<Button x:Name="Volume"  Height=`"80" Width="80" FontSize="20" FontWeight="Bold" Content="Volume" Background="#FFED9140" Click="Volume_Click"/>-->
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Confirm" Background="#FFED9140" Click="Confirm_Click"/>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Grid" Margin="10,0,0,0" Click="Grid_Click"/>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Color&#xA;Map" Margin="0,0,0,0" Click="ColorMap_Click"/>
                        <Button x:Name="LED" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="DualLed" Click="Led_Click"/>
                        <Button x:Name="LED2" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="ICGLed" Click="Led2_Click"/>
                        <Button x:Name="Contour" Height="80" Width="80" FontSize="18" FontWeight="Bold" Content="Contour" Click="Contour_Click"/>
                        <!--<Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Filter" Click="Filter_Click" />-->
                        <Label x:Name="shotposition" Width="100" Content="Nomal" FontSize="20" Margin="50,10,10,10" Loaded="shotposition_Loaded"/>
                        <Label x:Name="slidercount" Width="50" Content="50" FontSize="20" Margin="50,10,10,10"/>
                        <Slider x:Name="slider" Margin="10,10,10,10"  Width="200" Maximum="255" Value="50" SmallChange="1" ValueChanged="slider_ValueChanged"/>

                    </ToolBar>
                    <Border Grid.Column="0" Grid.Row="1" Background="Black" BorderBrush="Gray" BorderThickness="5" >
                        <Grid x:Name="MainGrid">
                            <Image x:Name="MainImage" Grid.Row="0" Grid.Column="0" MouseDown="MainImage_MouseDown" />
                            <Label x:Name="REC" Content="●" Foreground="Red" Margin="10,10,0,0" FontSize="25" Visibility="Hidden" />
                            <Label x:Name="REC2" Content="REC" Foreground="white" Margin="40,10,0,0" FontSize="25" Visibility="Hidden"/>
                            <Label x:Name="PositionLabel" Foreground="white" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,10,0" FontSize="25"/>
                            <Label x:Name="Gain" Foreground="white" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" FontSize="25"/>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem Header="이미지 뷰어 리스트" Height ="0">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <ToolBar Grid.ColumnSpan="2">
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content=" Image&#xA;Review" Background="#FFED9140" Click="Image_Review_Click"/>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content=" Video&#xA;Review" Background="#FFED9140" Click="VideoView_Click"/>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content=" Report&#xA; Review" Background="#FFED9140" Click="button_ReportView_Click"/>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Report" Background="#FFED9140" Click="ReportSet_Click"/>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Export" Background="#FFED9140" Click="Export_Click"/>
                        <Button x:Name="SendPacsbtn" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Send&#xA;PACS" Background="#FFED9140" Click="SendToPacs_Click"  VerticalAlignment="Top"/>
                    </ToolBar>
                    <ListView x:Name="List_ImageReview" Grid.Row="1" FontSize="30" SelectionChanged="List_ImageReview_SelectionChanged" SelectionMode="Multiple">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="200"/>
                                <GridViewColumn Header="Position" DisplayMemberBinding="{Binding Position}" Width="150"/>
                                <GridViewColumn Header="Sequence" DisplayMemberBinding="{Binding Sequences}" Width="200"/>
                                <GridViewColumn Header="Mode" DisplayMemberBinding="{Binding Mode}" Width="100"/>
                                <GridViewColumn Header="CameraSet" DisplayMemberBinding="{Binding CameraSet}" Width="200"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <Grid Grid.Column="1" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="500"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <ScrollViewer  VerticalScrollBarVisibility="Visible">
                            <Grid x:Name="ImageGrid" Background="#FFE5E5E5" Margin="0,0,0,0"/>
                        </ScrollViewer>
                        <Border Grid.Row="1" BorderBrush="#FF333333" BorderThickness="5" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Comment" FontWeight="Black"  Margin="10" FontSize="30" Width="auto" Height="auto" />
                                <TextBox x:Name="Comment" Grid.Row="1"  AcceptsReturn="True" AcceptsTab="True" TextWrapping="Wrap" Background="#FFE5E5E5" BorderThickness="0" FontSize="30" Margin="10" Foreground="Black"/>
                                <Button Grid.Row="2" Content="Save" FontSize="30" Width="150" HorizontalAlignment="Right" Margin="10" Click="CommentSave"/>
                            </Grid>
                        </Border>


                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="이미지 뷰어" Height="0">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <ToolBar>
                        <!--<Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content=" Review&#10;  Data" Background="#FF4E7DC2" Click="Review_Data_Click"/>-->
                        <Button x:Name="SrcenDivision" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content=" Screen&#xA;Division" Background="#FF4E7DC2" Click="ScrenDivision_Click"/>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Grid" Background="#FF4E7DC2" Click="ReviewGrid_Click"/>
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content=" Color&#xA; Map" Background="#FF4E7DC2" Click="ReviewColorMap_Click" />
                    </ToolBar>
                    <Grid x:Name="ViewGrid" Grid.Row="1" AllowDrop="True" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Border x:Name="Border1" Grid.Row="0" Grid.Column="0" Drop="img_View_Drop" Background="Black" BorderBrush="Gray" BorderThickness="5" MouseDown="Border_Click">
                            <Grid>
                                <Image x:Name="img_View1" AllowDrop="True"/>
                                <Label x:Name="information1_View1"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontSize="20"/>
                                <TextBlock x:Name="information2_View1"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Right" VerticalAlignment="Top" TextAlignment="Right"  Margin="10" FontSize="20"/>
                                <Label x:Name="information3_View1"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" FontSize="20"/>
                                <Label x:Name="information4_View1"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" FontSize="18"/>
                            </Grid>
                        </Border>
                        <Border x:Name="Border2" Grid.Row="0" Grid.Column="1" Drop="img_View_Drop" Background="Black" BorderBrush="Gray" BorderThickness="5" MouseDown="Border_Click">
                            <Grid>
                                <Image x:Name="img_View2" AllowDrop="True"/>
                                <Label x:Name="information1_View2"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontSize="20"/>
                                <TextBlock x:Name="information2_View2"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Right" VerticalAlignment="Top" TextAlignment="Right" Margin="10" FontSize="20"/>
                                <Label x:Name="information3_View2"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" FontSize="20"/>
                                <Label x:Name="information4_View2"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" FontSize="18"/>
                            </Grid>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="3" Grid.RowSpan="2" Background="Black" BorderBrush="Gray" BorderThickness="5">
                            <ScrollViewer x:Name="Image_Scroll"   VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible">
                                <Grid x:Name="Image_Select"/>
                            </ScrollViewer>
                        </Border>
                        <Border x:Name="Border3" Grid.Row="1" Grid.Column="0" Drop="img_View_Drop" Background="Black" BorderBrush="Gray" BorderThickness="5" MouseDown="Border_Click">
                            <Grid>
                                <Image x:Name="img_View3"/>
                                <Label x:Name="information1_View3"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontSize="20"/>
                                <TextBlock x:Name="information2_View3"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Right" VerticalAlignment="Top" TextAlignment="Right" Margin="10" FontSize="20"/>
                                <Label x:Name="information3_View3"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Left" VerticalAlignment="Bottom"  Margin="10" FontSize="20"/>
                                <Label x:Name="information4_View3"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" FontSize="18"/>
                            </Grid>
                        </Border>
                        <Border x:Name="Border4" Grid.Row="1" Grid.Column="1" Drop="img_View_Drop" Background="Black" BorderBrush="Gray" BorderThickness="5" MouseDown="Border_Click">
                            <Grid>
                                <Image x:Name="img_View4"/>
                                <Label x:Name="information1_View4"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10" FontSize="20"/>
                                <TextBlock  x:Name="information2_View4"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Right" VerticalAlignment="Top" TextAlignment="Right" Margin="10" FontSize="20"/>
                                <Label x:Name="information3_View4"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="10" FontSize="20"/>
                                <Label x:Name="information4_View4"  Width="auto" Height="auto" Foreground="white" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="10" FontSize="18"/>
                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="비디오 뷰어 리스트" Height="0">
                <Grid Background="#FFE5E5E5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="1*"/>
                    </Grid.RowDefinitions>
                    <ToolBar Grid.ColumnSpan="2">
                        <Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content=" Video&#xA;Review" Background="#FFED9140" Click="Video_Review_Click" />
                        <!--<Button Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Export" Background="#FFED9140" Click="VideoExport_Click" />-->
                        <Button x:Name="VideoSendPacsbtn" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Send&#xA;PACS" Background="#FFED9140" VerticalAlignment="Top" Click="VideoSendToPacs_Click"/>
                    </ToolBar>
                    <ListView x:Name="List_VideoReview" Grid.Row="1" FontSize="30" SelectionChanged="List_VideoReview_SelectionChanged">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="200"/>
                                <GridViewColumn Header="Position" DisplayMemberBinding="{Binding Position}" Width="150"/>
                                <GridViewColumn Header="Sequence" DisplayMemberBinding="{Binding Sequences}" Width="200"/>
                                <GridViewColumn Header="Dicom" DisplayMemberBinding="{Binding Dicom}" Width="100"/>
                                <GridViewColumn Header="FileName" DisplayMemberBinding="{Binding FileName}" Width="0"/>
                                <GridViewColumn Header=" Path" DisplayMemberBinding="{Binding Path}" Width="0"/>
                            </GridView>
                        </ListView.View>
                    </ListView>
                    <!--<Image x:Name="VideoImage" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch"/>-->
                    <MediaElement Name="Thumbnail" Grid.Column="1" Grid.Row="1" LoadedBehavior="Manual" UnloadedBehavior="Stop" MediaEnded="VideoPlayer_MediaEnded"/>
                    <!--<MediaElement Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch"/>-->
                </Grid>
            </TabItem>
            <TabItem Header="비디오 뷰어" Height="0">
                <Grid Background="#7F000000">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <ToolBar Grid.ColumnSpan="2">
                        <Button x:Name="Marker" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Marker" Background="#FFED9140" Click="Marker_Click" />
                        <Button x:Name="Eraser" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Eraser" Background="#FFED9140" Click="Eraser_Click" />
                        <Button x:Name="AllEraser" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="AllEraser" Background="#FFED9140" Click="AllEraser_Click"/>
                        <Button x:Name="Save" Height="80" Width="80" FontSize="20" FontWeight="Bold" Content="Save" Background="#FFED9140" Click="VideoDataSave_Click"/>
                    </ToolBar>
                    <MediaElement Grid.Row="1" Grid.RowSpan="2" x:Name="Video_View" HorizontalAlignment="Stretch" LoadedBehavior="Manual" MediaOpened="Video_View_MediaOpened" MediaFailed="Video_View_MediaFailed" MediaEnded="Video_View_MediaEnded" MouseDown="Video_View_Click" ScrubbingEnabled="True"/>
                    <Canvas Grid.Row="1" Grid.RowSpan="2" x:Name="Video_Canvas" HorizontalAlignment="Center" />
                    <Image x:Name="MarkerImage" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch"/>
                    <ListView Grid.Column="1" Grid.Row="2" x:Name="List_PackagesSpeed" SelectionChanged="List_PackagesSpeed_SelectionChanged">
                        <ListView.View>
                            <GridView>
